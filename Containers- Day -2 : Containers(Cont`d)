##------------DOCKER COMMANDS------------##

#To install Docker 
sudo apt update -y
sudo apt install docker.io -y

#To give the permissions to the logged in user
sudo usermod -aG docker ubuntu

#To check the available images
docker images
docker images ls

#To check the containers
docker ps
docker ps -a

#To build an image
docker build -t NAME:TAG .

#To run the container
docker run -d -p80:80 --name NAME nginx:V
